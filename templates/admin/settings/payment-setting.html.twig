{% block stylesheets %}
{% endblock %}
    {% block title %}Administration | Lenil {% endblock %}

{% extends "admin/base.html.twig" %}

{% block body %}

    <div class="breadcrumbs">
        <div class="col-sm-4"><!--- col-sm-4 Ends --->
            <div class="page-header float-left">
                <div class="page-title">
                    <h1><i class="menu-icon fa fa-cog"></i> Paramètres / Paiement</h1>
                </div>
            </div>
        </div><!--- col-sm-4 Ends --->
        <div class="col-sm-8"><!--- col-sm-8 Starts --->
            <div class="page-header float-right">
                <div class="page-title">
                    <ol class="breadcrumb text-right">
                        <li class="active">Paiement</li>
                    </ol>
                </div>
            </div>
        </div><!--- col-sm-8 Ends --->
    </div>
    <div class="container">
        <div class="row">
            <!--- 2 row Starts --->
            <div class="col-lg-12">
                <!--- col-lg-12 Starts --->
                <div class="card mb-5">
                    <!--- card mb-5 Starts --->
                    <div class="card-header">
                        <!--- card-header Starts --->
                        <h4 class="h4">
                            <i class="fa fa-money fa-fw"></i> Paramètre General de Paiement
                        </h4>
                    </div>
                    <!--- card-header Ends --->
                    <div class="card-body">
                        <!--- card-body Starts --->
                        {{ form_start(form) }}
                            <!--- form-group row Ends --->
                            <div class="form-group row">
                                <!--- form-group row Starts --->
                                {{ form_label(form.priceFeaturedProposal, null, {'label_attr': {'class': 'col-md-3 control-label'}}) }}

                                <div class="col-md-6">
                                    <div class="input-group">
                                        <!--- input-group Starts --->
                                        <span class="input-group-addon"><b>€</b></span>
                                        {{ form_widget(form.priceFeaturedProposal, { 'attr': {'class': 'form-control'} }) }}
                                    </div>
                                    <!--- input-group Ends --->
                                    <small class="form-text text-muted">
                                        Prix ​​que vous souhaitez facturer aux vendeurs pour que leurs propositions soient présentées                                    </small>
                                </div>
                            </div>
                            <!--- form-group row Ends --->
                            <div class="form-group row">
                                <!--- form-group row Starts --->
                                {{ form_label(form.durationFeatured, null, {'label_attr': {'class': 'col-md-3 control-label'}}) }}
                                <div class="col-md-6">
                                    <div class="input-group">
                                        <!--- input-group Starts --->
                                        {{ form_widget(form.durationFeatured, { 'attr': {'class': 'form-control','min': '1'} }) }}
                                        <span class="input-group-addon"><b>jours</b></span>
                                    </div>
                                    <!--- input-group Ends --->
                                    <small class="form-text text-muted">
                                        Nombre de jours pendant lesquels vous souhaiteriez que les propositions présentées soient présentées                                    </small>
                                </div>
                            </div>
                            <!--- form-group row Ends --->
                            <div class="form-group row processing-feeType">
                                {{ form_label(form.commissionProcessing, null, {'label_attr': {'class': 'col-md-3 control-label'}}) }}

                                <div class="col-md-6">
                                    <div class="input-group">

                                        <span class="input-group-addon"><b>€</b></span>
                                        {{ form_widget(form.commissionProcessing, { 'attr': {'class': 'form-control','min': '1'} }) }}
                                    </div>
                                </div>
                            </div>
                            <!--- form-group row Ends --->
                            <div class="form-group row">
                                <!--- form-group row Starts --->
                                <label class="col-md-3 control-label"></label>
                                <div class="col-md-6">
                                    <input type="submit" name="update_general_payment_settings" value="Mettre à jour les paramètres" class="btn btn-primary form-control">
                                </div>
                            </div>
                            <!--- form-group row Ends --->
                        {{ form_end(form) }}
                        <!--- form Ends --->
                    </div>
                    <!--- card-body Ends --->
                </div>
                <!--- card mb-5 Ends --->
            </div>
            <!--- col-lg-12 Ends --->
        </div>
        <div class="row">
            <!---  3 row Starts --->
            <div class="col-lg-12">
                <!--- col-lg-12 Starts --->
                <div class="card mb-5">
                    <!--- card mb-5 Starts -->
                    <div class="card-header">
                        <!--- card-header Starts --->
                        <h4 class="h4">
                            <i class="fa fa-paypal"></i> Paramètres PayPal
                        </h4>
                    </div>
                    <!--- card-header Ends --->
                    <div class="card-body">
                        <!--- card-body Starts --->
                        {{ form_start(formpaypal) }}
                        <!--- form Starts --->
                        <div class="form-group row">
                            <!--- form-group row Starts --->
                            {{ form_label(formpaypal.enabled, null, {'label_attr': {'class': 'col-md-3 control-label'}}) }}
                            <div class="col-md-6">
                                {{ form_widget(formpaypal.enabled, { 'attr': {'class': 'form-control'} }) }}
                                <small class="form-text text-muted">Autoriser les utilisateurs à payer via PayPal
                                </small>
                            </div>
                        </div>
                        <!--- form-group row Ends --->
                        <div class="form-group row">
                            <!--- form-group row Starts --->
                            {{ form_label(formpaypal.email, null, {'label_attr': {'class': 'col-md-3 control-label'}}) }}
                            <div class="col-md-6">
                                {{ form_widget(formpaypal.email, { 'attr': {'class': 'form-control'} }) }}
                                <small class="form-text text-muted">Entrez une adresse e-mail professionnelle PayPal afin de recevoir des paiements et également de transférer des fonds vers ce compte PayPal.</small>
                            </div>
                        </div>
                        <!--- form-group row Ends --->
                        <div class="form-group row">
                            <!--- form-group row Starts --->
                            {{ form_label(formpaypal.currency, null, {'label_attr': {'class': 'col-md-3 control-label'}}) }}
                            <div class="col-md-6">
                                {{ form_widget(formpaypal.currency, { 'attr': {'class': 'form-control'} }) }}
                                <small class="form-text text-muted">
                                    Code de devise utilisé pour les paiements PayPal. Liste complète  <a class="text-success" href="https://developer.paypal.com/docs/classic/api/currency_codes/" target="_blank">here</a>
                                </small>
                            </div>
                        </div>
                        <!--- form-group row Ends --->
                        <div class="form-group row">
                            <!--- form-group row Starts --->
                            {{ form_label(formpaypal.appClientId, null, {'label_attr': {'class': 'col-md-3 control-label'}}) }}
                            <div class="col-md-6">
                                {{ form_widget(formpaypal.appClientId, { 'attr': {'class': 'form-control'} }) }}
                            </div>
                        </div>
                        <!--- form-group row Ends --->
                        <div class="form-group row">
                            <!--- form-group row Starts --->
                            {{ form_label(formpaypal.AppClientSecret, null, {'label_attr': {'class': 'col-md-3 control-label'}}) }}
                            <div class="col-md-6">
                                {{ form_widget(formpaypal.AppClientSecret, { 'attr': {'class': 'form-control'} }) }}
                            </div>
                        </div>
                        <!--- form-group row Ends --->
                        <div class="form-group row">
                            <!--- form-group row Starts --->
                            {{ form_label(formpaypal.paypalSandbox, null, {'label_attr': {'class': 'col-md-3 control-label'}}) }}
                            <div class="col-md-6">
                                {{ form_widget(formpaypal.paypalSandbox, { 'attr': {'class': 'form-control'} }) }}

                            </div>
                        </div>
                        <!--- form-group row Ends --->
                        <div class="form-group row">
                            <!--- form-group row Starts --->
                            <label class="col-md-3 control-label"> </label>
                            <div class="col-md-6">
                                <input type="submit" name="update_paypal_settings" class="btn btn-primary form-control" value="Mettre à jour paramètre Paypal">
                            </div>
                        </div>
                        <!--- form-group row Ends --->
                        {{ form_end(formpaypal) }}
                        <!--- form Ends --->
                    </div>
                    <!--- card-body Ends --->
                </div>
                <!--- card mb-5 Ends -->
            </div>
            <!--- col-lg-12 Ends --->
        </div>
        <div class="row">
            <!--- 4 row Starts --->
            <div class="col-lg-12">
                <!--- col-lg-12 Starts --->
                <div class="card mb-5">
                    <!--- card mb-5 Starts --->
                    <div class="card-header">
                        <!--- card-header Starts --->
                        <h4 class="h4">
                            <i class="fa fa-credit-card"></i> Paramètre Stripe
                        </h4>
                    </div>
                    <!--- card-header Ends --->
                    <div class="card-body">
                        <!--- card-body Starts --->
                        {{ form_start(formstripe) }}
                        <!--- form Starts --->
                        <div class="form-group row">
                            <!--- form-group row Starts --->
                            {{ form_label(formstripe.enabled, null, {'label_attr': {'class': 'col-md-3 control-label'}}) }}
                            <div class="col-md-6">
                                {{ form_widget(formstripe.enabled, { 'attr': {'class': 'form-control'} }) }}
                                <small class="form-text text-muted">Autoriser les utilisateurs à payer via Stripe
                                </small>
                            </div>
                        </div>
                        <div class="form-group row">
                            <!--- form-group row Starts --->
                            {{ form_label(formstripe.currency, null, {'label_attr': {'class': 'col-md-3 control-label'}}) }}
                            <div class="col-md-6">
                                {{ form_widget(formstripe.currency, { 'attr': {'class': 'form-control'} }) }}
                                <small class="form-text text-muted">
                                    Code de devise utilisé pour les paiements Stripe.
                                </small>
                            </div>
                        </div>
                        <!--- form-group row Ends --->
                        <div class="form-group row">
                            <!--- form-group row Starts --->
                            {{ form_label(formstripe.secretKey, null, {'label_attr': {'class': 'col-md-3 control-label'}}) }}
                            <div class="col-md-6">
                                {{ form_widget(formstripe.secretKey, { 'attr': {'class': 'form-control'} }) }}
                            </div>
                        </div>
                        <!--- form-group row Ends --->
                        <div class="form-group row">
                            <!--- form-group row Starts --->
                            {{ form_label(formstripe.publishableKey, null, {'label_attr': {'class': 'col-md-3 control-label'}}) }}
                            <div class="col-md-6">
                                {{ form_widget(formstripe.publishableKey, { 'attr': {'class': 'form-control'} }) }}
                            </div>
                        </div>
                        <div class="form-group row">
                            <!--- form-group row Starts --->
                            <label class="col-md-3 control-label"> </label>
                            <div class="col-md-6">
                                <input type="submit" name="update_paypal_settings" class="btn btn-primary form-control" value="Mettre à jour paramètre Stripe">
                            </div>
                        </div>
                        <!--- form-group row Ends --->
                        {{ form_end(formstripe) }}
                    </div>
                    <!--- card-body Ends --->
                </div>
                <!--- card mb-5 Ends --->
            </div>
            <!--- col-lg-12 Ends --->
        </div>
    </div>
{% endblock %}
