{% block stylesheets %}
{% endblock %}
    {% block title %}Administration | Lenil {% endblock %}

{% extends "admin/base.html.twig" %}

{% block body %}

    <div class="breadcrumbs">
        <div class="col-sm-4">
            <div class="page-header float-left">
                <div class="page-title">
                    <h1><i class="menu-icon fa fa-picture-o"></i>Param√®tres / Carte </h1>
                </div>
            </div>
        </div>
        <div class="col-sm-8">
            <div class="page-header float-right">
                <div class="page-title">
                    <ol class="breadcrumb text-right">
                        <li class="active">Ajouter carte</li>
                    </ol>
                </div>
            </div>
        </div>

    </div>
    <div class="container">
        <div class="container">


            <div class="row"><!--- 2 row Starts --->

                <div class="col-lg-12"><!--- col-lg-12 Starts --->


                    <div class="card"><!--- card Starts --->

                        <div class="card-header"><!--- card-header Starts --->

                            <h4 class="h4">Ajouter carte</h4>

                        </div><!--- card-header Ends --->

                        <div class="card-body"><!--- card-body Starts --->

                            {{ form_start(form) }}
                            <!--- form-group row Ends --->

                            {% for CategoryField in form.Categories %}

                                {# store index of the category in a variable #}
                                {% set index = CategoryField.vars.value %}

                                {# get entity object from its index in the Categories Field #}
                                {% set entity = form.Categories.vars.choices[index].data %}

                                {#
                                    The entity variable contains a CategoryEntity with all its properties.
                                    So we can now render
                                #}

                                <div class="col-md-4">
                                    <div class="nk-feature-1">
                                        <div class="nk-feature-icon">
                                            <!-- Render the Icon of the Category -->
                                            <img src="{{ asset('/build/images/card/' ~ entity.image ) }}" alt="">
                                        </div>
                                        <div class="nk-feature-cont">
                                            <h3 class="nk-feature-title">
                                                {{ form_label(CategoryField) }}
                                            </h3>
                                            <h3 class="nk-feature-title text-main-1">
                                                <input type="checkbox" name="categories[]" {% if entity.Incard == true %} checked {% endif %} value="{{ entity.id }}">
                                            </h3>
                                        </div>
                                    </div>
                                </div>
                            {% endfor %}
                            <br>
                            <br>

                                <div class="col-md-6 float-right">
                                    <input type="submit" name="submit" class="btn btn-primary form-control" value="Ajouter carte">
                                </div>
                            {{ form_widget(form._token) }}
                            {{ form_end(form, {'render_rest': false}) }}
                        </div>
                    </div>
                </div>
            </div>



        </div>
    </div>
{% endblock %}
