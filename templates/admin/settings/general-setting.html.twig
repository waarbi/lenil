{% block stylesheets %}
{% endblock %}
    {% block title %}Administration | Lenil {% endblock %}

{% extends "admin/base.html.twig" %}

{% block body %}

    <div class="breadcrumbs">
        <div class="col-sm-4"><!--- col-sm-4 Ends --->
            <div class="page-header float-left">
                <div class="page-title">
                    <h1><i class="menu-icon fa fa-cog"></i> Paramètres / Paramètres généraux</h1>
                </div>
            </div>
        </div><!--- col-sm-4 Ends --->
        <div class="col-sm-8"><!--- col-sm-8 Starts --->
            <div class="page-header float-right">
                <div class="page-title">
                    <ol class="breadcrumb text-right">
                        <li class="active">Paramètres généraux</li>
                    </ol>
                </div>
            </div>
        </div><!--- col-sm-8 Ends --->
    </div>
    <div class="container">
        <div class="row"><!--- 2 row Starts --->
            <div class="col-lg-12"><!--- col-lg-12 Starts --->
                <div class="card mb-5"><!--- card mb-5 Starts --->
                    <div class="card-header"><!--- card-header Starts --->
                        <h4 class="h4"><i class="fa fa-cog"></i> Paramètres généraux </h4>
                    </div><!--- card-header Ends --->
                    <div class="card-body"><!--- card-body Starts --->
                        {{ form_start(form) }}

                            <div class="form-group row"><!--- form-group row Starts --->
                                {{ form_label(form.siteTitle, null, {'label_attr': {'class': 'col-md-3 control-label'}}) }}
                                <div class="col-md-6">
                                    <div class="input-group">
                                                    <span class="input-group-addon">
                                                    <b><i class="fa fa-laptop"></i></b>
                                                    </span>

                                        {{ form_widget(form.siteTitle, { 'attr': {'class': 'form-control'} }) }}

                                    </div>
                                </div>
                            </div><!--- form-group row Ends --->
                            <div class="form-group row"><!--- form-group row Starts --->
                                {{ form_label(form.siteDescription, null, {'label_attr': {'class': 'col-md-3 control-label'}}) }}
                                <div class="col-md-6">
                                    {{ form_widget(form.siteDescription, { 'attr': {'class': 'form-control', 'rows': '5'} }) }}
                                </div>
                            </div><!--- form-group row Ends --->

                            <div class="form-group row"><!--- form-group row Starts --->
                                {{ form_label(form.siteKeywords, null, {'label_attr': {'class': 'col-md-3 control-label'}}) }}
                                <div class="col-md-6">
                                    <div class="input-group">
                                        <span class="input-group-addon"><b><i class="fa fa-flash"></i></b></span>
                                        {{ form_widget(form.siteKeywords, { 'attr': {'class': 'form-control'} }) }}

                                    </div>
                                </div>
                            </div><!--- form-group row Ends --->

                            <div class="form-group row"><!--- form-group row Starts --->
                                {{ form_label(form.siteAuthor, null, {'label_attr': {'class': 'col-md-3 control-label'}}) }}
                                <div class="col-md-6">
                                    <div class="input-group">
                                        <span class="input-group-addon"><b><i class="fa fa-user"></i></b></span>
                                        {{ form_widget(form.siteAuthor, { 'attr': {'class': 'form-control'} }) }}

                                    </div>
                                </div>
                            </div>
                            <div class="form-group row">
                                {{ form_label(form.siteEmail, null, {'label_attr': {'class': 'col-md-3 control-label'}}) }}
                                <div class="col-md-6">
                                    <div class="input-group">
                                        <span class="input-group-addon"> <b><i class="fa fa-envelope-o"></i></b> </span>
                                        {{ form_widget(form.siteEmail, { 'attr': {'class': 'form-control'} }) }}
                                    </div>
                                </div>
                            </div>

                            <div class="form-group row"><!--- form-group row Starts --->
                                {{ form_label(form.googleRecaptchaSiteKey, null, {'label_attr': {'class': 'col-md-3 control-label'}}) }}
                                <div class="col-md-6">
                                    <div class="input-group">
                                        <span class="input-group-addon"> <b><i class="fa fa-key"></i></b> </span>
                                        {{ form_widget(form.googleRecaptchaSiteKey, { 'attr': {'class': 'form-control'} }) }}

                                    </div>
                                </div>
                            </div><!--- form-group row Ends --->

                            <div class="form-group row"><!--- form-group row Starts --->
                                {{ form_label(form.googleRecaptchaSecretKey, null, {'label_attr': {'class': 'col-md-3 control-label'}}) }}
                                <div class="col-md-6">
                                    <div class="input-group">
                                        <span class="input-group-addon"> <b><i class="fa fa-key"></i></b> </span>
                                        {{ form_widget(form.googleRecaptchaSecretKey, { 'attr': {'class': 'form-control'} }) }}

                                    </div>
                                </div>
                            </div>
                            <div class="form-group row"><!--- form-group row Starts --->
                                {{ form_label(form.EnableKnowledgeBank, null, {'label_attr': {'class': 'col-md-3 control-label'}}) }}
                                <div class="col-md-6">
                                    {{ form_widget(form.EnableKnowledgeBank, { 'attr': {'class': 'form-control'} }) }}
                                    <small class="form-text text-muted">Activer ou désactiver le guide sur le
                                        site</small>
                                </div>
                            </div>
                            <div class="form-group row">
                                {{ form_label(form.EnableMaintenanceMode, null, {'label_attr': {'class': 'col-md-3 control-label'}}) }}
                                <div class="col-md-6">
                                    {{ form_widget(form.EnableMaintenanceMode, { 'attr': {'class': 'form-control'} }) }}
                                    <small class="form-text text-muted">
                                        Activer ou désactiver le mode maintenance du site.
                                    </small>
                                </div>
                            </div>

                            <div class="form-group row">
                                <label class="col-md-3 control-label"></label>
                                <div class="col-md-6">
                                    <input type="submit" name="general_settings_update"
                                           class="form-control btn btn-primary" value="Mettre à jour paramètre général">
                                </div>
                            </div>
                        {{ form_end(form) }}

                    </div><!--- card-body Ends --->

                </div><!--- card mb-5 Ends --->

            </div><!--- col-lg-12 Ends --->

        </div>

    </div>
{% endblock %}
