{% block stylesheets %}
{% endblock %}
    {% block title %}Administration | Lenil {% endblock %}

{% extends "admin/base.html.twig" %}

{% block body %}

    <div class="breadcrumbs">
        <div class="col-sm-4">
            <div class="page-header float-left">
                <div class="page-title">
                    <h1><i class="menu-icon fa fa-picture-o"></i> Slides Page d'accueil du vendeur</h1>
                </div>
            </div>
        </div>
        <div class="col-sm-8">
            <div class="page-header float-right">
                <div class="page-title">
                    <ol class="breadcrumb text-right">
                        <li class="active"><a href="{{ path('add_new_slide_setting') }}" class="btn btn-success">

                                <i class="fa fa-plus-circle text-white"></i> <span class="text-white">Ajouter une nouvelle slide</span>

                            </a></li>
                    </ol>
                </div>
            </div>
        </div>

    </div>
    <div class="container">
        <div class="container">

            <div class="row">
                <!--- 2 row Starts --->

                <div class="col-lg-12">
                    <!--- col-lg-12 Starts --->

                    <div class="card">
                        <!--- card Starts --->

                        <div class="card-header">
                            <!--- card-header Starts --->

                            <h4 class="h4">
                                <!--- h4 Starts --->

                                Voir les Slides <br>

                                <small>Ces diapositives apparaîtront dans la page d'accueil connectée</small>

                            </h4>
                            <!--- h4 Ends --->

                        </div>
                        <!--- card-header Ends --->

                        <div class="card-body">
                            <!--- card-body Starts --->

                            <div class="row">
                                <!--- row Starts --->

                                {% for slide in sliders %}
                                    <div class="col-lg-4 col-md-6 mb-lg-3 mb-3"><!--- col-lg-3 col-md-6 mb-lg-0 mb-3 Starts --->

                                        <div class="card"><!--- card Starts --->

                                            <div class="card-header text-center">

                                                {{ slide.title }}
                                            </div>

                                            <div class="card-body p-1"><!--- card-body Starts --->

                                                <img src="/uploads/images/{{ slide.imageName }}" style="height: 150px; min-width: 100%;" class="img-fluid">

                                            </div><!--- card-body Ends --->

                                            <div class="card-footer"><!--- card-footer Starts --->

                                                <a href="{{ path('delete_slide_homepage',{id : slide.id}) }}" class="float-left btn btn-danger" title="Delete">

                                                    <i class="fa fa-trash text-white"></i>

                                                </a>

                                                <a href="{{ path('edit_slide_setting', {id: slide.id}) }}" class="float-right btn btn-success" title="edit">

                                                    <i class="fa fa-pencil text-white"></i>

                                                </a>

                                                <div class="clearfix"></div>

                                            </div><!--- card-footer Ends --->

                                        </div><!--- card Ends --->

                                    </div><!--- col-lg-3 col-md-6 mb-lg-0 mb-3 Ends --->
                                {% else %}
                                    <p>Pas encore de slides</p>
                                {% endfor %}

                            </div>
                            <!--- row Ends --->

                        </div>
                        <!--- card-body Ends --->

                    </div>
                    <!--- card Ends --->

                </div>
                <!--- col-lg-12 Ends --->

            </div>
            <!--- 2 row Ends --->

        </div>
    </div>
{% endblock %}
