{% block stylesheets %}
{% endblock %}
    {% block title %}Administration | Lenil {% endblock %}

{% extends "admin/base.html.twig" %}

{% block body %}
    <div class="breadcrumbs">
        <div class="col-sm-4">
            <div class="page-header float-left">
                <div class="page-title">
                    <h1><i class="menu-icon fa fa-book"></i>Guide</h1>
                </div>
            </div>
        </div>
        <div class="col-sm-8">
            <div class="page-header float-right">
                <div class="page-title">
                    <ol class="breadcrumb text-right">
                        <li class="active">Modifier un article</li>
                    </ol>
                </div>
            </div>
        </div>
    </div>
    <div class="container">
        <div class="row"><!--- 2 row Starts --->
            <div class="col-lg-12"><!--- col-lg-12 Starts --->
                <div class="card"><!--- card Starts --->
                    <div class="card-header"><!--- card-header Starts --->
                        <h4 class="h4">Modifier article</h4>
                    </div><!--- card-header Ends --->
                    <div class="card-body"><!--- card-body Starts --->
                        {{ form_start(form) }}  <!--- form Starts --->
                        <div class="form-group row">
                            {{ form_label(form.title, null, {'label_attr': {'class': 'col-md-3 control-label'}}) }}

                            <div class="col-md-6">
                                {{ form_widget(form.title, { 'attr': {'class': 'form-control'} }) }}
                            </div>
                        </div><!--- form-group row Ends --->
                        <div class="form-group row"><!--- form-group row Starts --->
                            {{ form_label(form.status, null, {'label_attr': {'class': 'col-md-3 control-label'}}) }}
                            <div class="col-md-6">
                                {{ form_widget(form.status, { 'attr': {'class': 'form-control'} }) }}
                            </div>
                        </div><!--- form-group row Ends --->
                        <div class="form-group row"><!--- form-group row Starts --->
                            {{ form_label(form.articleCategory, null, {'label_attr': {'class': 'col-md-3 control-label'}}) }}
                            <div class="col-md-6">
                                {{ form_widget(form.articleCategory, { 'attr': {'class': 'form-control'} }) }}
                            </div>
                        </div><!--- form-group row Ends --->
                        <div class="form-group row"><!--- form-group row Starts --->
                            {{ form_label(form.topImage, null, {'label_attr': {'class': 'col-md-3 control-label'}}) }}
                            <div class="col-md-6">
                                {{ form_widget(form.topImage, { 'attr': {'class': 'form-control'} }) }}
                                <img src="/uploads/images/{{ article.topImage }}"  width="200" height="100" alt="">
                            </div>
                        </div><!--- form-group row Ends --->
                        <div class="form-group row"><!--- form-group row Starts --->
                            {{ form_label(form.content, null, {'label_attr': {'class': 'col-md-3 control-label'}}) }}
                            <div class="col-md-6">
                                {{ form_widget(form.content, { 'attr': {'class': 'form-control'} }) }}
                            </div>
                        </div>
                        <div class="form-group row">
                            <label class="col-md-4 control-label"></label>
                            <div class="col-md-6">
                                <input type="submit" name="submit" value="Modifier l'article" class="btn btn-primary form-control">
                            </div>

                        </div>
                        {{form_end(form)}}
                    </div><!--- card-body Ends --->

                </div><!--- card Ends --->

            </div><!--- col-lg-12 Ends --->

        </div><!--- 2 row Ends --->


    </div>
{% endblock %}
