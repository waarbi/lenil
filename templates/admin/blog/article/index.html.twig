{% block stylesheets %}
{% endblock %}
    {% block title %}Administration | Lenil {% endblock %}

{% extends "admin/base.html.twig" %}

{% block body %}

    <div class="breadcrumbs">
        <div class="col-sm-4">
            <div class="page-header float-left">
                <div class="page-title">
                    <h1><i class="menu-icon fa fa-book"></i> Guide utilisateur</h1>
                </div>
            </div>
        </div>
        <div class="col-sm-8">
            <div class="page-header float-right">
                <div class="page-title">
                    <ol class="breadcrumb text-right">
                        <li class="active"><a href="{{ path('admin_create_article') }}" class="btn btn-success">
                                <i class="fa fa-plus-circle text-white"></i> <span class="text-white">Ajouter article</span>
                            </a></li>
                    </ol>
                </div>
            </div>
        </div>

    </div>
    <div class="container">

        <div class="row"><!--- 2 row Starts --->

            <div class="col-lg-12"><!--- col-lg-12 Starts --->

                <div class="card"><!--- card Starts --->

                    <div class="card-header"><!--- card-header Starts --->

                        <h4 class="h4">

                            <i class="fa fa-money-bill-alt"></i> Tous les articles

                        </h4>

                    </div><!--- card-header Ends --->

                    <div class="card-body"><!--- card-body Starts --->

                        <table class="table table-bordered"><!--- table table-bordered table-hover Starts --->

                            <thead>

                            <tr>


                                <th>Titre</th>

                                <th>Catégorie article</th>

                                <th>Statut</th>

                                <th>Actions</th>

                            </tr>
                            </thead>
                            <tbody><!--- tbody Starts --->

                            {% for article in articles %}
                            <tr>


                                <td>{{ article.title }}</td>

                                <td>{{ article.articleCategory.title }}</td>

                                <td>{% if article.status == true %} Activé {% else %} Désactivé {% endif %}</td>

                                <td>
                                    <a href="{{ path('admin_edit_article',{id : article.id}) }}" class="text-primary">
                                        Modifier
                                    </a> |
                                    <a href="{{ path('admin_delete_article',{id : article.id}) }}" class="text-primary">
                                        Supprimer
                                    </a>
                                </td>
                            </tr>
                            {% else %}
                            <p>Pas de catégorie</p>
                            {% endfor %}
                            </tbody>
                            <!--- tbody Ends --->
                        </table>
                        <!--- table table-bordered table-hover Ends --->
                    </div>
                    <!--- card-body Ends --->

                </div>
                <!--- card Ends --->

            </div>
            <!--- col-lg-12 Ends --->

        </div>
        <!--- 2 row Ends --->

    </div>
{% endblock %}
