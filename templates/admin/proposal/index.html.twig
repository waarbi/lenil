{% extends "admin/base.html.twig" %}

{% block body %}
    <div class="breadcrumbs">
        <div class="col-sm-4">
            <div class="page-header float-left">
                <div class="page-title">
                    <h1><i class="menu-icon fa fa-table"></i> Gestion des Services</h1>
                </div>
            </div>
        </div>
        <div class="col-sm-8">
            <div class="page-header float-right">
                <div class="page-title">
                    <ol class="breadcrumb text-right">
                        <li class="active">Services</li>
                    </ol>
                </div>
            </div>
        </div>
    </div>
    <div class="container">
        <div class="row "><!--- 1 row Starts --->
            <div class="col-lg-12"><!--- col-lg-12 Starts --->
                <div class="p-3 mb-3  "><!--- p-3 mb-3 filter-form Starts --->
                    <h2 class="pb-4">Filtrer les services </h2>
                        {{ form_start(formSearch,{'attr': {'class': 'form-inline pb-2'}}) }}
                            <div class="row">
                                <div class="col">
                                    <div class="form-group">
                                        {{ form_label(formSearch.deliveryTime) }}
                                        {{ form_widget(formSearch.deliveryTime, { 'attr': {'class': 'form-control mb-2 mr-sm-2 mb-sm-0'} }) }}
                                    </div>
                                </div>
                                <div class="col">
                                    <div class="form-group">
                                        {{ form_label(formSearch.category) }}
                                        {{ form_widget(formSearch.category, { 'attr': {'class': 'form-control mb-2 mr-sm-2 mb-sm-0'} }) }}
                                    </div>
                                </div>
                                <div class="col">
                                    <div class="form-group">
                                        {{ form_label(formSearch.subcategory) }}
                                        {{ form_widget(formSearch.subcategory, { 'attr': {'class': 'form-control mb-2 mr-sm-2 mb-sm-0'} }) }}
                                    </div>
                                </div>
                                <div class="col">
                                    <div class="form-group">
                                        {{ form_label(formSearch.maxPrice)}}
                                        {{ form_widget(formSearch.maxPrice, { 'attr': {'class': 'form-control'} }) }}
                                    </div>
                                </div>
                            </div>
                            <div class="row" style="margin-top: 10px">
                                <div class="col float-right">
                                    <div class="form-group">
                                        <button type="submit" class="btn btn-primary"> Rechercher</button>
                                    </div>
                                </div>
                            </div>

                         {{ form_end(formSearch) }}
                </div>
            </div>
        </div>
        <div class="row mt-3"><!--- 2 row mt-3 Starts --->
            <div class="col-lg-12"><!--- col-lg-12 Starts --->
                <div class="card"><!--- card Starts --->
                    <div class="card-header"><!--- card-header Starts --->
                        <h4 class="h4">Services</h4>
                    </div><!--- card-header Ends --->
                    <div class="card-body"><!--- card-body Starts --->

                        <a href="{{ path('admin_index_proposals') }}" class="make-black font-weight-bold mr-2">
                            Voir tout ({{ totalPropasals }})
                        </a>
                        <span class="mr-2">|</span>
                        <a href="{{ path('admin_index_active_proposals') }}" class="mr-2">
                            Active ({{nbActiveProposals}})
                        </a>
                        <span class="mr-2">|</span>
                        <a href="{{ path('admin_index_featured_proposals') }}" class="mr-2">
                            Featured ({{nbFeaturedProposals}})
                        </a>
                        <span class="mr-2">|</span>
                        <a href="{{ path('admin_index_pending_proposals') }}" class="mr-2">
                            En cours de validation ({{ nbProposal }})
                        </a>
                        <span class="mr-2">|</span>
                        <a href="{{ path('admin_index_pause_proposals') }}" class="mr-2">
                            Pause ({{ nbPauseProposals }})
                        </a>
                        <span class="mr-2">|</span>
                        <a href="{{ path('admin_index_trush_proposals') }}" class="mr-2">
                            Corbeille ({{ nbCorbeilleProposals }})
                        </a>
                        <div class="table-responsive mt-4"><!--- table-responsive mt-4 Starts --->
                            <table class="table  table-bordered table-striped">
                                <!--- table table-hover table-bordered Starts --->
                                <thead><!--- thead Starts --->

                                <tr>
                                    <th>Titre</th>

                                    <th>Image</th>

                                    <th>Prix</th>

                                    <th>Catégorie</th>

                                    <th>Commande</th>

                                    <th>Statut</th>

                                    <th>Actions</th>

                                </tr>

                                </thead><!--- thead Ends --->

                                <tbody><!--- tbody Starts --->

                                {% for proposal in pagination.data %}
                                    <tr>
                                        <td>{{ proposal.title }}</td>
                                        <td>
                                            <img src="/uploads/images/{{ proposal.getProposalImages[0].getFileName }}" width="70" height="60">
                                        </td>
                                        <td>{{ proposal.price }} €</td>
                                        <td>{{ proposal.category.title }}</td>
                                        <td>0</td>
                                        <td>
                                            {% if proposal.statusId == 1 %}
                                                Active
                                            {% elseif proposal.statusId == 2 %}
                                                Pause
                                            {% elseif proposal.statusId == 3 %}
                                                En cours de validation
                                            {% elseif proposal.statusId == 4 %}
                                                Décliné
                                            {% elseif proposal.statusId == 6 %}
                                                Corbeille
                                            {% endif %}
                                        </td>
                                        <td>
                                            {% if proposal.statusId == 1 %}
                                                <a title="View Proposal" href="../proposals/tyrone/i-will-test"
                                                   target="_blank">
                                                    <i class="fa fa-eye"></i>
                                                </a>
                                                <a {% if proposal.featured == true %} class="text-primary"{% endif %} href="{{ path('admin_make_featured_proposals',{id:proposal.id}) }}"
                                                        {% if proposal.featured == true %} title="Service déjà mis en avant" {% else %} title="Mettre en avant ce service"{% endif %}>

                                                    <i class="fa fa-star"></i>
                                                </a>
                                                <a {% if proposal.topRated == true %} class="text-danger"{% endif %} href="{{ path('admin_make_toprated_proposals',{id : proposal.id}) }}"
                                                        {% if proposal.topRated == true %} title="Service déjà en Top rated " {% else %} title="Mettre le service en Top Rated"{% endif %}>
                                                    {% if proposal.topRated == true %}
                                                        <i class="fa fa-heartbeat" aria-hidden="true"></i>
                                                    {% else %}
                                                        <i class="fa fa-heart" aria-hidden="true"></i>
                                                    {% endif %}
                                                </a>
                                                <a title="Desactiver/Activer  Service" href="{{ path('admin_pause_proposal',{id : proposal.id}) }}">
                                                    <i class="fa fa-pause-circle"></i>
                                                </a>
                                                <a title="Corbeille" href="{{ path('admin_trush_proposal',{id : proposal.id}) }}">
                                                    <i class="fa fa-trash"></i>
                                                </a>
                                            {% elseif proposal.statusId == 2 %}
                                                <a title="View Proposal"
                                                   href="../proposals/pat/meus-servios-ou-produtos" target="_blank">
                                                    <i class="fa fa-eye"></i> Preview Proposal
                                                </a>
                                                <br>
                                                <a href="{{ path('admin_pause_proposal',{id : proposal.id}) }}" title="Desactiver/Activer  Service">
                                                    <i class="fa fa-refresh"></i> Unpause
                                                </a>
                                                <br>
                                                <a href="{{ path('admin_trush_proposal',{id : proposal.id}) }}">
                                                    <i class="fa fa-trash"></i> Corbeille
                                                </a>
                                            {% elseif proposal.statusId == 3 %}

                                                <a title="Preview this Proposal"
                                                   href="../proposals/gogrady/robotics-engineering" target="_blank">
                                                    <i class="fa fa-eye"></i> Preview
                                                </a>
                                                <br>
                                                <a title="Submit this Proposal to seller for modification"
                                                   href="index?submit_modification=113">
                                                    <i class="fa fa-edit"></i> Soumettre pour modification
                                                </a>
                                                <br>
                                                <a title="Approuver le service" href="{{ path('admin_approval_proposal',{id : proposal.id}) }}">
                                                    <i class="fa fa-check-square-o"></i> Approuver
                                                </a>
                                                <br>
                                                <a title="Decliner le service" href="{{ path('admin_declined_proposal',{id : proposal.id}) }}">
                                                    <i class="fa fa-ban"></i> Decliner
                                                </a>

                                            {% elseif proposal.statusId == 4 %}
                                                <a href="{{ path('admin_approval_proposal',{id : proposal.id}) }}">
                                                    <i class="fa fa-check-square-o"></i> Approuver
                                                </a>
                                                <br>
                                                <a href="index?submit_modification=609">
                                                    <i class="fa fa-edit"></i> Soumettre pour modification
                                                </a>
                                                <br>
                                                <a title="View Proposal"
                                                   href="../proposals/tyrone/i-will-mix-and-master-your-song-in-one-day"
                                                   target="_blank">
                                                    <i class="fa fa-eye"></i> Preview
                                                </a>
                                                <br>
                                                <a href="{{ path('admin_delete_proposal',{id : proposal.id}) }}">
                                                    <i class="fa fa-trash"></i> Supprimer définitivement
                                                </a>
                                            {% elseif proposal.statusId == 6 %}
                                                <a href="{{ path('admin_trush_proposal',{id : proposal.id}) }}">
                                                    <i class="fa fa-reply"></i> Restore service
                                                </a>
                                                <br>
                                                <a href="{{ path('admin_delete_proposal',{id : proposal.id}) }}">
                                                    <i class="fa fa-trash"></i> Supprimer définitivement
                                                </a>
                                            {% endif %}
                                        </td>
                                    </tr>

                                {% else %}
                                    <p>Pas de services</p>
                                {% endfor %}
                                </tbody><!--- tbody Ends --->

                            </table><!--- table table-hover table-bordered Ends --->

                        </div><!--- table-responsive mt-4 Ends --->
                        <div class="d-flex justify-content-center"><!--- d-flex justify-content-center Starts --->

                            <ul class="pagination"><!--- pagination Starts --->
                                {% if pagination.data|length > 0 %}
                                    {{ pagination.display() }}
                                {% endif %}
                            </ul>
                        </div>
                    </div>
                </div>
            </div>

        </div>
    </div>
{% endblock %}
