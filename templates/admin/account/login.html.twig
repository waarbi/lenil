    <link href='https://fonts.googleapis.com/css?family=Open+Sans:400,600,700,800' rel='stylesheet' type='text/css'>

    <!-- <script type="text/javascript" src="https://cdn.jsdelivr.net/html5shiv/3.7.3/html5shiv.min.js"></script> -->

    <style>

        .swal2-popup .swal2-styled.swal2-confirm {

            background-color: #3578e5 !important;
        }

        .log-width{

            width: 550px;
            margin: 0 auto;
        }

    </style>

</head>
<body class="bg-dark">

<script src="https://code.jquery.com/jquery-3.1.1.min.js"></script>

<div class="sufee-login d-flex align-content-center flex-wrap">
    <div class="container">
        <div class="login-content">
            <div class="login-logo pb-4">
                <a href="#">
                    <h2 class="text-white"> Lenil  <span class="badge badge-primary p-2 font-weight-bold">ADMIN</span></h2>
                </a>
            </div>


            <div class="login-form">
                {% if hasError %}
                    <div class="alert alert-danger">Une erreur est survenue, le nom d'utilisateur ou le mot de passe est invalide</div>
                {% endif %}

                <form action="{{ path('admin_account_login') }}" id="myform" method="post" autocomplete="off">

                    <div class="form-group">

                        <label>Login</label>

                        <input type="email" required class="input form-control" value="" placeholder="Entrer votre email" name="_username" >

                    </div>

                    <div class="form-group">

                        <label>Mot de pass</label>

                        <input type="password" required class="pass form-control" value=" " placeholder="Entrer votre mot de pass" name="_password" >

                    </div>

                    <div class="checkbox pb-2">

                        <label>

                        </label>

                        <label class="pull-right">



                        </label>

                    </div>

                    <button type="submit" class="btn btn-primary btn-flat m-b-30 m-t-30" name="admin_login"><i class="fa fa-unlock-alt" aria-hidden="true"></i>
                        Connexion</button>
                    <a href="{{path('homepage')}}" class="btn btn-link">

                        <i class="fa fa-arrow-circle-left" aria-hidden="true"></i>
                        Retour au site
                    </a>
                </form>


            </div>

        </div>

    </div>

</div>

<script>

    $(document).ready(function(){
        let haserror = '{{ hasError }}'
            console.log(haserror)

        setTimeout(function(){

            document.getElementById("myform").reset();

            $(".pass").val("");

        },100);


    });

</script>

<script src="{{ asset('build/admin/js/plugins.js') }}"></script>

</body>

</html>

