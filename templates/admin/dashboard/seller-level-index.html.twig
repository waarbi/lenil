{% block stylesheets %}
{% endblock %}
    {% block title %}Administration | Lenil {% endblock %}

{% extends "admin/base.html.twig" %}

{% block body %}
    <div class="breadcrumbs">
        <div class="col-sm-4">
            <div class="page-header float-left">
                <div class="page-title">
                    <h1><i class="menu-icon fa fa-flash"></i> Niveau Freelancer </h1>
                </div>
            </div>
        </div>
        <div class="col-sm-8">

        </div>

    </div>
    <div class="container">

        <div class="row">
            <!--- 2 row Starts --->

            <div class="col-lg-12">
                <!--- col-lg-12 Starts --->

                <div class="card">
                    <!--- card Starts --->

                    <div class="card-header">
                        <!--- card-header Starts --->

                        <h4 class="h4">

                            <i class="fa fa-money-bill-alt"></i> Voir niveau freelancer

                        </h4>

                    </div>
                    <!--- card-header Ends --->
                    <div class="card-body">
                        <!--- card-body Starts --->
                        <div class="table-responsive">
                            <!--- table-responsive Starts --->
                            <table class="table table-bordered">
                                <!--- table table-bordered table-hover Starts --->
                                <thead>
                                <!--- thead Starts --->
                                <tr>
                                    <th>Id</th>

                                    <th>Titre</th>

                                    <th>nom</th>
                                </tr>
                                </thead>
                                <!--- thead Ends --->
                                <tbody>
                                <!--- tbody Starts --->
                                {% for sellerLevel in pagination.data  %}
                                <tr>

                                    <td>{{ sellerLevel.id }}</td>

                                    <td>{{ sellerLevel.name }}</td>

                                    <td>

                                        <a href="{{ path('admin_edit_seller_level', {id : sellerLevel.id}) }}" class="btn btn-primary">

                                            <i class="fa fa-pencil text-white"></i> <span class="text-white">Modifier</span>

                                        </a>

                                    </td>

                                </tr>
                                {% else %}
                                    <p>Pas level</p>
                                {% endfor %}
                                </tbody>
                                <!--- tbody Ends --->

                            </table>
                            <!--- table table-bordered table-hover Ends --->

                        </div>
                        <!--- table-responsive Ends --->

                    </div>
                    {% if pagination.data|length > 0 %}
                        {{pagination.display()}}
                    {% endif %}
                    <!--- card-body Ends --->

                </div>
                <!--- card Ends --->

            </div>
            <!--- col-lg-12 Ends --->

        </div>
        <!--- 2 row Ends --->



    </div>
{% endblock body %}