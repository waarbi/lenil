{% block stylesheets %}
{% endblock %}
    {% block title %}Administration | Lenil {% endblock %}

{% extends "admin/base.html.twig" %}

{% block body %}

    <div class="breadcrumbs">
        <div class="col-sm-4">
            <div class="page-header float-left">
                <div class="page-title">
                    <h1><i class="menu-icon fa fa-cubes"></i> Categories </h1>
                </div>
            </div>
        </div>
        <div class="col-sm-8">
            <div class="page-header float-right">
                <div class="page-title">
                    <ol class="breadcrumb text-right">
                        <li class="active"><a href="{{ path('admin_create_sub_category') }}" class="btn btn-success">

                                <i class="fa fa-plus-circle text-white"></i> <span class="text-white">Ajouter sous catégorie</span>

                            </a></li>
                    </ol>
                </div>
            </div>
        </div>

    </div>
    <div class="container">

        <div class="row"><!--- 2 row Starts --->

            <div class="col-lg-12"><!--- col-lg-12 Starts --->

                <div class="card"><!--- card Starts --->

                    <div class="card-header"><!--- card-header Starts --->

                        <h4 class="h4">

                            <i class="fa fa-money-bill-alt"></i> Toutes les sous categories

                        </h4>

                    </div><!--- card-header Ends --->

                    <div class="card-body"><!--- card-body Starts --->

                        <table class="table table-bordered"><!--- table table-bordered table-hover Starts --->

                            <thead>
                            <tr>
                                <th>Id</th>
                                <th>Title</th>
                                <th>Description</th>
                                <th>Title</th>
                                <th>Delete</th>
                                <th>Edit</th>
                            </tr>
                            </thead>
                            <tbody><!--- tbody Starts --->

                            {% for subcategory in pagination.data  %}
                                <tr>

                                    <td>{{ subcategory.id }}</td>

                                    <td>{{ subcategory.title }}</td>

                                    <td width="400">{{ subcategory.description }}</td>

                                    <td>{% if subcategory.category %} {{subcategory.category.title}} {% endif %}</td>

                                    <td>
                                        <a href="{{ path('admin_delete_sub_category', {id : subcategory.id}) }}" class="btn btn-danger">

                                            <i class="fa fa-trash text-white"></i> <span class="text-white">Supprimer</span>
                                        </a>
                                    </td>
                                    <td>
                                        <a href="{{ path('admin_edit_sub_category', {id: subcategory.id}) }}" class="btn btn-success">
                                            <i class="fa fa-pencil text-white"></i> <span class="text-white">Editer</span>
                                        </a>
                                    </td>
                                </tr>
                            {% else %}
                                <p>Pas de sous catégorie</p>
                            {% endfor %}
                            </tbody>
                        </table>
                    </div>
                    {% if pagination.data|length > 0 %}
                        {{pagination.display()}}
                    {% endif %}
                </div>
            </div>
        </div>
    </div>
{% endblock %}
