                                    <a href="{{ path('category_services',{slug: category.slug}) }}">
                                        <div class="grn_box">
                                            <img src="{{ asset('build/images/card/'~category.image) }}"
                                                 class="mx-auto d-block">
                                            <p>{{ category.title }}</p>
                                        </div>
                                    </a>
                                </div>
                                {% if loop.index > 4 %}
                                    <div class="space80 hidden-xs"></div>
                                    <div class="space20 visible-xs"></div>
