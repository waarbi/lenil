                                        <div class="card-box">
                                            <div>
                                                <a href="#categories/graphics-design/photoshop-editing"
                                                   class="subcategory">
                                                    <h4><small></small>{{category.title}}</h4>
                                                    <picture>
                                                        <img src="build/images/card/{{ category.getCardPicture }}">
                                                    </picture>
                                                </a>
                                            </div>
                                        </div>
                                    </div>
                                {% endfor %}

                            </div>
                        </div>
                        <div class="owl-nav">
                            <button type="button" role="presentation" class="owl-prev disabled"><span
                                        aria-label="Previous"></span></button>
                            <button type="button" role="presentation" class="owl-next"><span aria-label="Next"></span>
                            </button>
                        </div>
                        <div class="owl-dots">
                            <button role="button" class="owl-dot active"><span></span></button>
                            <button role="button" class="owl-dot"><span></span></button>
                        </div>
                    </div>
                </div>
            </div>
        </div>
        <!-- start market -->
        <section class="market">
