                        $.each(result.freelancers, function (key, user) {
                            _html += '                                <div class="col-md-12">\n' +
                                '                                    <div class="card card-body mb-4 freelancerBox">\n' +
                                '                                        <figure class="wt-userlistingimg">\n' +
                                '                                            <img src='+'/uploads/images/'+ user.avatar+' width="100"\n' +
                            '                                                 class="rounded img-fluid">\n' +
                            '                                            <a id="chatBtn" data-toggle="tooltip" data-placement="top" title=""\n' +
                            '                                               href="conversations/message.php?seller_id=2"\n' +
                            '                                               class="btn btn-success mt-4 text-white "\n' +
                            '                                               data-original-title="Chat With Me"><i class="fa fa-comments-o"\n' +
                            '                                                                                     aria-hidden="true"></i> Chat</a>\n' +
                            '                                        </figure>\n' +
                            '                                        <div class="request-description">\n' +
                            '                                            <div class="row">\n' +
                            '                                                <div class="col-lg-9 col-md-12">\n' +
                            '                                                    <a href='+user.freelancerUrl+'>\n' +
                            '                                                        <h6 class="font-weight-normal"><i class="fa fa-check-circle"\n' +
                            '                                                                                          style="color:#00cc8d;"></i>\n' +
                            '                                                            '+ user.fullname+'</h6>\n' +
                            '                                                        <h5 class="text-success"> '+ user.firstProposal+' </h5>\n' +
                            '                                                    </a>\n' +
                            '                                                    <ul class="tagline mb-2">\n' +
                            '                                                        <li>\n' +
                            '                                                            <i class="fa fa-user"></i>\n' +
                            '                                                            <strong>Membre\n' +
                            '                                                                depuis: </strong> '+ user.sinceMember+' </li>\n' +
                            '                                                        <li>\n' +
                            '                                                            <i class="fa fa-truck fa-flip-horizontal"></i>\n' +
                            '                                                            <strong>Livraison\n' +
                            '                                                                r√©cente: </strong>'+ user.delivery+'  </li>\n' +
                            '                                                        <li>\n' +
                            '                                                            <i class="fa fa-map-marker"></i>\n' +
                            '                                                            <strong>Pays: </strong>'+ user.country+' \n' +
                            '                                                        </li>\n' +
                            '                                                        <li>\n' +
                            '                                                            <a href="conversations/message.php?seller_id=2"><i\n' +
                            '                                                                        class="fa fa-comments-o"></i>\n' +
                            '                                                                <strong>Contacter:</strong> '+ user.fullname+'  </a>\n' +
                            '                                                        </li>\n' +
                            '                                                    </ul>\n' +
                            '                                                </div>\n' +
                            '                                                <div class="col-lg-3 col-md-12">\n' +
                            '                                                    <div class="star-rating">\n' +
                            '                                                        <i class="fa fa-star"></i> <i class="fa fa-star"></i> <i\n' +
                            '                                                                class="fa fa-star"></i> <i class="fa fa-star"></i> <i\n' +
                            '                                                                class="fa fa-star-o"></i>                <h4\n' +
                            '                                                                class="mb-1">\n' +
                            '                                                            4.8/<small class="text-muted font-weight-normal">5</small>\n' +
                            '                                                        </h4>\n' +
                            '                                                        <a>(21 Reviews)</a>\n' +
                            '                                                    </div>\n' +
                            '                                                </div>\n' +
                            '                                            </div>\n' +
                            '                                            <p class="lead mb-2 mt-0">'+ user.description+' </p>\n' +
                            '                                            <div class="skills">\n' +
                            '                                            </div>\n' +
                            '                                        </div>\n'+
                            '                                        </div>\n'+
                            '                                        </div>';
                        });
                    }else {
                        _html +='<div class=\'col-md-12\'>\n<h1 class=\'text-center mt-4\'><i class=\'fa fa-meh-o\'></i> Nous n\'avons trouv√© aucun freelancer correspondant √† cette recherche </h1>\n</div>';
                    }
                    $('#freelancers').html(_html);
                    $('#wait').removeClass("loader");
                }
            });
        }

        $('.get_online_sellers').click(function () {
            get_freelancers();
        });
        $('.get_seller_country').click(function () {
            get_freelancers();
        });

        $('.get_seller_level').click(function () {
            get_freelancers();
        });

        $(document).ready(function () {
            $(".get_seller_country").click(function () {
                if ($(".get_seller_country:checked").length > 0) {
                    $(".clear_seller_country").show();
                } else {
                    $(".clear_seller_country").hide();
                }
            });

            $(".get_seller_level").click(function () {
                if ($(".get_seller_level:checked").length > 0) {
                    $(".clear_seller_level").show();
                } else {
                    $(".clear_seller_level").hide();
                }
            });
            $(".clear_seller_country").click(function () {
                $(".clear_seller_country").hide();
            });

            $(".clear_seller_level").click(function () {
                $(".clear_seller_level").hide();
            });

        });

        function clearCountry() {
            $('.get_seller_country').prop('checked', false);
            get_freelancers();
        }

        function clearLevel() {
            $('.get_seller_level').prop('checked', false);
            get_freelancers();
        }

    </script>

{% endblock %}